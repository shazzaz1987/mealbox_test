<h1 id="alling">All Ingredients</h1>

<a id="newing"href="/ingredients/new">Add Ingredient</a>

<table id = "ingtable">
  <tr>
    <th>Name</th>
    <th>Category</th>
    <th>Cost</th>
    <th>QtyUnit</th>
    <th colspan="3"></th>
  </tr>

  <% @ingredients.each do |ingredient| %>
    <tr>
      <td><%= ingredient.name %></td>
      <td><%= ingredient.category %></td>
      <td><%= ingredient.cost %></td>
      <td><%= ingredient.qtyunit %></td>
      <td><%= link_to '', ingredient_path(ingredient),
              method: :delete,
              data: { confirm: 'Are you sure?' } , class:'fa fa-trash-o' %></td>
    </tr>
  <% end %>
</table>
